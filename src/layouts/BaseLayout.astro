---
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/fira-code/400.css';
import '@fontsource/fira-code/500.css';
import '@fontsource/fira-code/600.css';
import '@fontsource/fira-code/700.css';
import '@fontsource/source-code-pro/400.css';
import '@fontsource/source-code-pro/500.css';
import '@fontsource/source-code-pro/600.css';
import '@fontsource/source-code-pro/700.css';
import '../styles/global.css';
import { generateSEOTags, generateJSONLD, defaultSEO, type SEOMetadata } from '../lib/seo';
import aboutData from '../content/about.json';

interface Props {
  seo?: Partial<SEOMetadata>;
}

const { seo = {} } = Astro.props;
const seoData = { ...defaultSEO, ...seo };
const seoTags = generateSEOTags(seoData);

// Environment variables
const plausibleDomain = import.meta.env.PUBLIC_PLAUSIBLE_DOMAIN;
const gaMeasurementId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://alexrivera.dev';

// JSON-LD Schema
const personSchema = generateJSONLD('Person', {
  name: aboutData.name,
  role: aboutData.role,
  bio: aboutData.bio,
  url: siteUrl,
  avatar: aboutData.avatar,
  linkedin: aboutData.links.linkedin,
  github: aboutData.links.github,
});

const websiteSchema = generateJSONLD('WebSite', {
  name: `${aboutData.name} - Portfolio`,
  description: seoData.description,
  url: siteUrl,
  author: aboutData.name,
});
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{seoTags.title}</title>
    <meta name="description" content={seoTags.description} />
    <meta name="author" content={seoTags.openGraph.siteName} />
    <link rel="canonical" href={siteUrl} />
    
    <!-- Open Graph -->
    <meta property="og:type" content={seoTags.openGraph.type} />
    <meta property="og:title" content={seoTags.openGraph.title} />
    <meta property="og:description" content={seoTags.openGraph.description} />
    <meta property="og:image" content={seoTags.openGraph.image} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:site_name" content={seoTags.openGraph.siteName} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content={seoTags.twitter.card} />
    <meta name="twitter:title" content={seoTags.twitter.title} />
    <meta name="twitter:description" content={seoTags.twitter.description} />
    <meta name="twitter:image" content={seoTags.twitter.image} />
    <meta name="twitter:creator" content={seoTags.twitter.creator} />
    
    <!-- JSON-LD Schema -->
    <script type="application/ld+json" set:html={personSchema} />
    <script type="application/ld+json" set:html={websiteSchema} />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://images.unsplash.com" />
    
    <!-- Analytics Scripts -->
    {plausibleDomain && (
      <script defer data-domain={plausibleDomain} src="https://plausible.io/js/script.js"></script>
    )}
    
    {gaMeasurementId && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaMeasurementId}`}></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaMeasurementId);
        </script>
      </>
    )}
    
    <!-- Dark mode script (runs before body to prevent flash) -->
  </head>
  
  <body class="bg-black text-green-400 font-mono dark">
    <slot />
  </body>
</html>

<style is:global>
  /* Base styles */
  * {
    box-sizing: border-box;
  }
  
  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    min-height: 100vh;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  /* Focus styles for accessibility */
  *:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
    
    html {
      scroll-behavior: auto;
    }
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #f1f5f9;
  }
  
  .dark ::-webkit-scrollbar-track {
    background: #1e293b;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 4px;
  }
  
  .dark ::-webkit-scrollbar-thumb {
    background: #475569;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }
  
  .dark ::-webkit-scrollbar-thumb:hover {
    background: #64748b;
  }
</style>